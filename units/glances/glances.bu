systemd:
  units:
    - name: glances.service
      enabled: true
passwd:
  users:
    - name: glances
      primary_group: glances
      shell: /bin/false
  groups:
    - name: glances
storage:
  files:
    - path: /usr/local/etc/sites/status.local.conf
      mode: 0o444
      user:
        name: avahi
      group:
        name: avahi

