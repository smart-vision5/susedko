passwd:
  users:
    - name: share
      uid: 1004
      primary_group: share
      shell: /bin/false
      groups:
        - dockerhub
  groups:
    - name: share
      gid: 1004
systemd:
  units:
    - name: samba.service
      enabled: true
storage:
  files:
    - path: /etc/avahi/services/samba.service
      contents:
        inline: |
          <?xml version="1.0" standalone='no'?>
          <!DOCTYPE service-group SYSTEM "avahi-service.dtd">
          <service-group>
            <name>Susedko</name>
            <service>
              <type>_smb._tcp</type>
              <port>445</port>
            </service>
          </service-group>
    - path: /var/mnt/vault/.config/samba/config.yml
      mode: 0o660
      user:
        name: share
      group:
        name: share
  directories:
    - path: /var/mnt/vault/shared
      mode: 0o777
      user:
        name: share
      group:
        name: share
    - path: /var/mnt/vault/.config/samba
      mode: 0o770
      user:
        name: share
      group:
        name: share
