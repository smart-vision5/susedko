systemd:
  units:
    - name: langtool.service
      enabled: true
passwd:
  users:
    - name: langtool
      primary_group: langtool
      shell: /bin/false
  groups:
    - name: langtool
storage:
  directories:
    - path: /media/langtool/ngrams
      overwrite: false
      mode: 0o644
      user:
        name: langtool
      group:
        name: langtool
